@page "/counter"
@inherits CounterBase
<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="IncrementMany">Add @addMany</button>
<button class="btn btn-primary" @onclick="Up">Increase</button>
<button class="btn btn-primary" @onclick="Down">Decrease</button>
